{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "plugin:flowtype/recommended"],
  "plugins": ["import", "flowtype"],
  "rules": {
    "semi": 0,
    "no-console": 0,
    "sort-keys": 1
  },
  "env": {
    "node": true,
    "jest": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
