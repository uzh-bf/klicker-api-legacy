{
  "name": "klicker-api",
  "version": "1.2.0",
  "main": "src/server.js",
  "homepage": "https://www.klicker.uzh.ch",
  "repository": "https://github.com/uzh-bf/klicker-api.git",
  "bugs": "https://github.com/uzh-bf/klicker-uzh",
  "author": "Roland Schlaefli <roland.schlaefli@bf.uzh.ch>",
  "engines": {
    "node": ">=10",
    "yarn": "YARN NO LONGER USED - use npm instead."
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "apollo-server-express": "2.4.8",
    "aws-sdk": "2.449.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "caller": "1.0.1",
    "compression": "1.7.4",
    "convict": "4.4.1",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "cross-env": "5.2.0",
    "dataloader": "1.4.0",
    "dotenv": "7.0.0",
    "draft-js": "0.10.5",
    "elastic-apm-node": "2.11.0",
    "express": "4.16.4",
    "express-jwt": "5.3.1",
    "express-rate-limit": "3.5.0",
    "graphql": "14.2.1",
    "graphql-iso-date": "3.6.1",
    "graphql-redis-subscriptions": "2.1.0",
    "graphql-subscriptions": "1.1.0",
    "graphql-tools": "4.0.4",
    "handlebars": "4.1.2",
    "helmet": "3.18.0",
    "ioredis": "4.9.0",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.11",
    "md5": "2.2.1",
    "moment": "2.24.0",
    "mongodb": "3.2.3",
    "mongoose": "5.6.0",
    "morgan": "1.9.1",
    "nodemailer": "6.1.1",
    "pretty-error": "2.1.1",
    "rate-limit-redis": "1.6.0",
    "raven": "2.6.4",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "subscriptions-transport-ws": "0.9.16",
    "uuid": "3.3.2",
    "v8n": "1.2.3",
    "validator": "10.7.1"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "2.1.0",
    "jest": "24.7.1",
    "lint-staged": "8.1.6",
    "nodemon": "1.18.11",
    "prettier": "1.17.0",
    "supertest": "4.0.2"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -w \"src/**/*.js\" -w .env -w package.json src/server.js",
    "dev:inspect": "cross-env NODE_ENV=development nodemon -w \"src/**/*.js\" -w .env -w package.json --inspect src/server.js",
    "dev:ndb": "cross-env NODE_ENV=development ndb node src/server.js",
    "format": "prettier --write \"src/**/*.js\" \"src/**/*.graphql\" \"src/**/*.json\"",
    "format:ci": "prettier --list-different \"src/**/*.js\" \"src/**/*.graphql\" \"src/**/*.json\"",
    "lint": "eslint \"src/**/*.js\"",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "start:inspect": "cross-env NODE_ENV=production node --inspect src/server.js",
    "test": "jest",
    "test:ci": "jest --coverage --forceExit",
    "test:snap": "jest -u",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.graphql": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "jest --onlyChanged"
    }
  }
}
