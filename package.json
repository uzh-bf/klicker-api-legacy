{
  "name": "klicker-api",
  "version": "1.0.0-beta.7",
  "main": "src/server.js",
  "repository": "https://github.com/uzh-bf/klicker-api.git",
  "author": "Roland Schl√§fli <roland.schlaefli@bf.uzh.ch>",
  "license": "AGPL-3.0",
  "dependencies": {
    "apollo-engine": "0.8.10",
    "apollo-server-express": "1.3.2",
    "bcryptjs": "2.4.3",
    "bluebird": "3.5.1",
    "body-parser": "1.18.2",
    "compression": "1.7.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "cross-env": "5.1.3",
    "dataloader": "1.4.0",
    "dotenv": "5.0.1",
    "elastic-apm-node": "1.0.3",
    "express": "4.16.2",
    "express-jwt": "5.3.0",
    "express-rate-limit": "2.11.0",
    "graphql": "0.13.1",
    "graphql-subscriptions": "0.5.8",
    "graphql-tools": "2.21.0",
    "handlebars": "4.0.11",
    "helmet": "3.11.0",
    "ioredis": "3.2.2",
    "jsonwebtoken": "8.1.1",
    "lodash": "4.17.5",
    "md5": "2.2.1",
    "moment": "2.20.1",
    "mongodb": "3.0.3",
    "mongoose": "5.0.7",
    "morgan": "1.9.0",
    "nodemailer": "4.6.0",
    "rate-limit-redis": "1.4.0",
    "subscriptions-transport-ws": "0.9.6"
  },
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "eslint": "4.18.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.9.0",
    "husky": "0.14.3",
    "jest": "22.4.2",
    "lint-staged": "7.0.0",
    "nodemon": "1.15.1",
    "prettier": "1.10.2",
    "prettier-eslint": "8.8.1",
    "prettier-eslint-cli": "4.7.1",
    "supertest": "3.0.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn run test --onlyChanged",
    "dev": "nodemon --delay 1000ms -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock src/server.js",
    "dev:inspect": "nodemon 1000ms -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock --inspect src/server.js",
    "format": "prettier-eslint --singleQuote --no-semi --write \"src/**/*.js\"",
    "format:ci": "prettier-eslint --singleQuote --no-semi --list-different \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\"",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "start:inspect": "cross-env NODE_ENV=production node --inspect src/server.js",
    "start:pm": "NODE_ENV=production pm2-docker start --env production src/server.js",
    "test": "jest",
    "test:ci": "jest --coverage --forceExit",
    "test:snap": "jest -u",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["src/"]
  },
  "lint-staged": {
    "*.js": ["prettier-eslint --single-quote --no-semi --write", "eslint", "git add"],
    "*.json": ["prettier-eslint --single-quote --no-semi --write", "git add"]
  }
}
