  "dependencies": {
    "apollo-server-express": "1.3.6",
    "bcryptjs": "2.4.3",
    "bluebird": "3.5.1",
    "body-parser": "1.18.3",
    "compression": "1.7.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "cross-env": "5.2.0",
    "dataloader": "1.4.0",
    "dotenv": "6.0.0",
    "draft-js": "0.10.5",
    "elastic-apm-node": "1.7.1",
    "express": "4.16.3",
    "express-jwt": "5.3.1",
    "express-rate-limit": "2.11.0",
    "graphql": "0.13.2",
    "graphql-redis-subscriptions": "1.5.0",
    "graphql-subscriptions": "0.5.8",
    "graphql-tools": "3.0.2",
    "handlebars": "4.0.11",
    "helmet": "3.12.1",
    "ioredis": "3.2.2",
    "jsonwebtoken": "8.3.0",
    "lodash": "4.17.10",
    "md5": "2.2.1",
    "moment": "2.22.2",
    "mongodb": "3.0.10",
    "mongoose": "5.1.6",
    "morgan": "1.9.0",
    "nodemailer": "4.6.7",
    "rate-limit-redis": "1.5.0",
    "raven": "2.6.3",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "request": "2.87.0",
    "request-promise": "4.2.2",
    "subscriptions-transport-ws": "0.9.11"
  },
  "devDependencies": {
    "babel-eslint": "8.2.4",
    "eslint": "5.0.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.12.0",
    "husky": "0.14.3",
    "jest": "23.1.0",
    "lint-staged": "7.2.0",
    "nodemon": "1.17.5",
    "prettier": "1.13.5",
    "prettier-eslint": "8.8.2",
    "prettier-eslint-cli": "4.7.1",
    "supertest": "3.1.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn run test --onlyChanged",
    "dev": "cross-env NODE_ENV=development nodemon --delay 1000ms -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock src/server.js",
    "dev:inspect": "cross-env NODE_ENV=development nodemon 1000ms -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock --inspect src/server.js",
    "format": "prettier-eslint --singleQuote --no-semi --write \"src/**/*.js\"",
    "format:ci": "prettier-eslint --singleQuote --no-semi --list-different \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\"",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "start:inspect": "cross-env NODE_ENV=production node --inspect src/server.js",
    "start:pm": "NODE_ENV=production pm2-docker start --env production src/server.js",
    "test": "jest",
    "test:ci": "jest --coverage --forceExit",
    "test:snap": "jest -u",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --single-quote --no-semi --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier-eslint --single-quote --no-semi --write",
      "git add"
    ]
  }
}
