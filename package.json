{
  "name": "klicker-api",
  "version": "1.0.0-beta.4",
  "main": "src/server.js",
  "repository": "https://github.com/uzh-bf/klicker-api.git",
  "author": "Roland Schl√§fli <roland.schlaefli@bf.uzh.ch>",
  "license": "AGPL-3.0",
  "dependencies": {
    "apollo-engine": "0.5.6",
    "apollo-server-express": "1.2.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.2",
    "compression": "1.7.1",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "cross-env": "5.1.1",
    "dotenv": "4.0.0",
    "express": "4.16.2",
    "express-jwt": "5.3.0",
    "graphql": "0.11.7",
    "graphql-subscriptions": "0.5.5",
    "graphql-tools": "2.9.0",
    "helmet": "3.9.0",
    "ioredis": "^3.2.1",
    "jsonwebtoken": "8.1.0",
    "lodash": "4.17.4",
    "md5": "2.2.1",
    "moment": "2.19.2",
    "mongodb": "2.2.33",
    "mongoose": "4.13.5",
    "morgan": "1.9.0",
    "subscriptions-transport-ws": "0.9.1"
  },
  "devDependencies": {
    "babel-eslint": "8.0.2",
    "eslint": "4.12.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.8.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "5.0.0",
    "nodemon": "1.12.1",
    "prettier": "1.8.2",
    "prettier-eslint": "8.2.2",
    "prettier-eslint-cli": "4.4.0",
    "supertest": "3.0.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn run test --onlyChanged",
    "dev": "nodemon --delay 1000ms -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock src/server.js",
    "dev:inspect": "nodemon 1000ms -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock --inspect src/server.js",
    "format": "prettier-eslint --single-quote --no-semi --write \"src/**/*.js\"",
    "format:ci": "prettier-eslint --single-quote --no-semi --list-different \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\"",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "start:inspect": "cross-env NODE_ENV=production node --inspect src/server.js",
    "test": "jest",
    "test:ci": "jest --coverage --forceExit",
    "test:snap": "jest -u",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["src/"]
  },
  "lint-staged": {
    "*.js": ["prettier-eslint --single-quote --no-semi --write", "eslint", "git add"],
    "*.json": ["prettier-eslint --single-quote --no-semi --write", "git add"]
  }
}
